{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
	"extends": [
		"config:base"
	],
	"git-submodules": {
		"enabled": true
	},
	"js": {
		"enabled": false
	},
	"pin": {
		"enabled": false
	},
	"packageRules": [
		{
			"matchPackagePatterns": ["packwiz-spec"],
			"automerge": true,
			"automergeType": "branch"
		}
	],
	"ignoreTests": true
}
